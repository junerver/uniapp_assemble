# 应用配置
APP_NAME="Android项目构建工具"
APP_VERSION="1.0.0"
DEBUG=true
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL="sqlite+aiosqlite:///./android_builder.db"

# 文件存储配置
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=524288000  # 500MB
ALLOWED_EXTENSIONS=[".zip"]

# Git配置
GIT_AUTO_BACKUP=true
GIT_COMMIT_AUTHOR="Android Builder <builder@example.com>"
GIT_MAX_COMMIT_MESSAGE_LENGTH=1000

# 构建配置
GRADLE_TIMEOUT=1800  # 30分钟
MAX_CONCURRENT_BUILDS=3
DEFAULT_GRADLE_TASKS=["clean", ":app:assembleRelease"]

# 安全配置
SECRET_KEY="your-super-secret-key-here-change-in-production-with-at-least-32-chars"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 日志配置
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"

# CORS配置 (前端开发)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8000"]

# 性能配置
MAX_UPLOAD_MEMORY=104857600  # 100MB
CHUNK_SIZE=1048576  # 1MB

# 资源清理配置
TEMP_FILE_CLEANUP_INTERVAL=3600  # 1小时
AUTO_DELETE_TEMP_FILES=true